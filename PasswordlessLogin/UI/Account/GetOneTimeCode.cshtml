@model SimpleIAM.PasswordlessLogin.UI.Account.SetPasswordModel
@{
    ViewData["Title"] = "Get One Time Code";
}
<div class="focusBox focusBox-centered">
  <h2 class="focusBox_title">Update Account</h2>
<p>You will need a one time code to continue</p>
<form method="post" class="form">
    <div class="field form_row">
        <input type="hidden" name="GetOneTimeCode" value="true" />
        <input type="submit" class="field_element field_element-fullWidth field_element-tall" value="Get one time code" />
    </div>
</form>
</div>